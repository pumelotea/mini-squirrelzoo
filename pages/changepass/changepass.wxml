<!--pages/changePass/changepass.wxml-->
<view style="background-color: var(--ghostWhite);height:100vh;padding-top:10px;">
  <view class="cu-form-group">
		<view class="title">验证码</view>
		<input bindinput="mailCode" placeholder="6位数字邮件验证码"></input>
		<button bindtap="getPasswordMailCode" class="cu-btn bg-blue shadow">获取</button>
	</view>
  <view class="cu-form-group">
		<view class="title">新密码</view>
		<input bindinput="newPassword" placeholder="必须"></input>
	</view>
  <view class="padding flex flex-direction">
    <button bindtap="changePassword" class="cu-btn bg-gradual-red margin-tb-sm lg">确定</button>
  </view>
</view>
